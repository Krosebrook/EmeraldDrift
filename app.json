{
  "expo": {
    "name": "Creator Studio",
    "slug": "creator-studio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "creatorstudio",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.creatorstudio.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Creator Studio needs camera access to capture photos and videos for your content.",
        "NSPhotoLibraryUsageDescription": "Creator Studio needs photo library access to select media for your posts.",
        "NSPhotoLibraryAddUsageDescription": "Creator Studio needs permission to save generated content to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#8B5CF6",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.creatorstudio.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png",
      "name": "Creator Studio",
      "shortName": "Creator",
      "description": "Multi-platform content creation and social media management",
      "lang": "en",
      "themeColor": "#8B5CF6",
      "backgroundColor": "#171717",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "bundler": "metro",
      "preferRelatedApplications": false
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#8B5CF6",
          "dark": {
            "backgroundColor": "#171717"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "Creator Studio needs photo library access to select media for your posts.",
          "cameraPermission": "Creator Studio needs camera access to capture photos and videos for your content."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#8B5CF6"
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "creator-studio-lite"
      }
    },
    "owner": "creatorstudio"
  }
}
