{
  "name": "emerald-drift",
  "displayName": "Creator Studio Lite",
  "version": "2.0.0",
  "description": "A production-ready mobile application for multi-platform content creation and social media management",
  "main": "index.js",
  "author": "EmeraldDrift Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Krosebrook/EmeraldDrift.git"
  },
  "bugs": {
    "url": "https://github.com/Krosebrook/EmeraldDrift/issues"
  },
  "homepage": "https://github.com/Krosebrook/EmeraldDrift#readme",
  "keywords": [
    "social-media",
    "content-creation",
    "instagram",
    "tiktok",
    "youtube",
    "linkedin",
    "pinterest",
    "analytics",
    "scheduling",
    "react-native",
    "expo",
    "mobile-app"
  ],
  "scripts": {
    "dev": "EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN npx expo start",
    "start": "npx expo start",
    "android": "npx expo start --android",
    "ios": "npx expo start --ios",
    "web": "npx expo start --web",
    "lint": "npx expo lint",
    "check:format": "prettier --check \"**/*.{js,ts,tsx,css,json}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,css,json}\"",
    "test": "echo \"No test suite configured yet\" && exit 0",
    "build:android": "eas build --platform android --profile production",
    "build:ios": "eas build --platform ios --profile production",
    "build:web": "npx expo export:web"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "^2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@react-navigation/native-stack": "^7.3.16",
    "expo": "^54.0.23",
    "expo-blur": "^15.0.7",
    "expo-constants": "~18.0.9",
    "expo-device": "^8.0.9",
    "expo-font": "~14.0.9",
    "expo-glass-effect": "~0.1.6",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.10",
    "expo-image-picker": "^17.0.8",
    "expo-linking": "~8.0.8",
    "expo-media-library": "^18.2.1",
    "expo-notifications": "^0.32.13",
    "expo-secure-store": "^15.0.8",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.8",
    "expo-web-browser": "~15.0.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-keyboard-controller": "1.18.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "3.6.2",
    "typescript": "~5.9.2"
  },
  "private": true
}
