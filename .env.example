# EmeraldDrift Environment Configuration
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ============================================================================
# API Configuration
# ============================================================================
EXPO_PUBLIC_API_URL=https://api.example.com
EXPO_PUBLIC_API_KEY=your_api_key_here

# ============================================================================
# AI Services
# ============================================================================

# Google Gemini (Required for Merch Studio mockup generation)
# Get your API key at: https://makersuite.google.com/app/apikey
EXPO_PUBLIC_GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (Optional - for advanced AI content generation)
# Get your API key at: https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=sk-...

# ============================================================================
# E-Commerce Marketplace Integration
# ============================================================================

# Shopify
# Create a custom app in your Shopify admin: Settings > Apps and sales channels > Develop apps
EXPO_PUBLIC_SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
EXPO_PUBLIC_SHOPIFY_ADMIN_ACCESS_TOKEN=shpat_...
EXPO_PUBLIC_SHOPIFY_STOREFRONT_ACCESS_TOKEN=...

# Etsy
# Create an app at: https://www.etsy.com/developers/
EXPO_PUBLIC_ETSY_API_KEY=your_etsy_api_key
EXPO_PUBLIC_ETSY_SHARED_SECRET=your_etsy_shared_secret
EXPO_PUBLIC_ETSY_SHOP_ID=your_shop_id

# Amazon (Seller Central & KDP)
# Get credentials from: https://sellercentral.amazon.com/
EXPO_PUBLIC_AMAZON_ACCESS_KEY_ID=your_amazon_access_key_id
EXPO_PUBLIC_AMAZON_SECRET_ACCESS_KEY=your_amazon_secret_access_key
EXPO_PUBLIC_AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER
EXPO_PUBLIC_AMAZON_SELLER_ID=your_seller_id

# Printify (Print-on-Demand)
# Create an API token at: https://printify.com/app/account/api
EXPO_PUBLIC_PRINTIFY_API_TOKEN=your_printify_api_token
EXPO_PUBLIC_PRINTIFY_SHOP_ID=your_printify_shop_id

# WooCommerce
# Generate keys in: WooCommerce > Settings > Advanced > REST API
EXPO_PUBLIC_WOOCOMMERCE_URL=https://yourstore.com
EXPO_PUBLIC_WOOCOMMERCE_CONSUMER_KEY=ck_...
EXPO_PUBLIC_WOOCOMMERCE_CONSUMER_SECRET=cs_...

# TikTok Shop
# Register at: https://partner.tiktokshop.com/
EXPO_PUBLIC_TIKTOK_SHOP_APP_KEY=your_tiktok_shop_app_key
EXPO_PUBLIC_TIKTOK_SHOP_APP_SECRET=your_tiktok_shop_app_secret
EXPO_PUBLIC_TIKTOK_SHOP_ACCESS_TOKEN=your_access_token

# ============================================================================
# Social Media Platform Integration
# ============================================================================

# Instagram Graph API
# Create an app at: https://developers.facebook.com/
EXPO_PUBLIC_INSTAGRAM_APP_ID=your_instagram_app_id
EXPO_PUBLIC_INSTAGRAM_APP_SECRET=your_instagram_app_secret
EXPO_PUBLIC_INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# TikTok API
EXPO_PUBLIC_TIKTOK_CLIENT_KEY=your_tiktok_client_key
EXPO_PUBLIC_TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# YouTube Data API
# Create credentials at: https://console.cloud.google.com/
EXPO_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key
EXPO_PUBLIC_YOUTUBE_CLIENT_ID=your_youtube_client_id
EXPO_PUBLIC_YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# LinkedIn API
# Create an app at: https://www.linkedin.com/developers/
EXPO_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id
EXPO_PUBLIC_LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Pinterest API
# Create an app at: https://developers.pinterest.com/
EXPO_PUBLIC_PINTEREST_APP_ID=your_pinterest_app_id
EXPO_PUBLIC_PINTEREST_APP_SECRET=your_pinterest_app_secret

# ============================================================================
# Analytics & Monitoring
# ============================================================================
EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable major feature sets
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ENABLE_TEAM_FEATURES=true
EXPO_PUBLIC_ENABLE_MARKETPLACE_FEATURES=true
EXPO_PUBLIC_ENABLE_MERCH_STUDIO=true
EXPO_PUBLIC_ENABLE_DESIGN_STUDIO=true
EXPO_PUBLIC_ENABLE_AGENT_ORCHESTRATION=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# ============================================================================
# Storage & CDN
# ============================================================================
EXPO_PUBLIC_CDN_URL=https://cdn.example.com
EXPO_PUBLIC_STORAGE_BUCKET=your_storage_bucket

# ============================================================================
# Webhooks (for marketplace order notifications)
# ============================================================================
EXPO_PUBLIC_WEBHOOK_BASE_URL=https://your-domain.com/webhooks
EXPO_PUBLIC_WEBHOOK_SECRET=your_webhook_secret

# ============================================================================
# Development Settings
# ============================================================================
EXPO_PUBLIC_ENV=development
EXPO_PUBLIC_DEBUG=true
EXPO_PUBLIC_LOG_LEVEL=debug
